{
  "expo": {
    "name": "ChurchFeed",
    "slug": "ChurchFeed",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "churchfeed",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-notifications",
      "expo-image-picker",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.churchfeed.app",
          "enableGooglePay": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "metro": {
      "resolver": {
        "assetExts": ["bin", "txt", "jpg", "png", "json", "gif", "webp", "svg", "mp4", "webm", "wav", "mp3", "m4a", "aac", "oga", "pdf"],
        "sourceExts": ["js", "json", "ts", "tsx", "jsx"]
      },
      "transformer": {
        "babelTransformerPath": "@expo/metro-config/babel-transformer"
      },
      "maxWorkers": 2
    }
  }
}
